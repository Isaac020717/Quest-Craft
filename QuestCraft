import java.awt.AWTException;
import java.awt.Robot;
Robot MouseMover;

int currentOffset = 0;
int screenX = 2000;
int screenY;

// Setup Function
public void setup() {
  
  // basic setup
  fullScreen(P2D);
  frameRate(60);
  
  // setup variables
  screenY = height;
  
  // load images
  loadMaterials();
  
  // setup mouse mover
  try {
    MouseMover = new Robot();
  } catch (AWTException e) {
    println("Robot Class Not Supported");
    exit();
  }
  
}


// Draw Function
public void draw() {
  
  background(250);
  
  if (constructionMode) {
    drawGrid();
    displayTerrain();
    displayConstructionUI();
  }
  
}
