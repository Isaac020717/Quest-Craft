// This File Combines All Classes And Functions In A Logical Way To Clearly Organise The Game

import java.awt.AWTException;
import java.awt.Robot;
Robot MouseMover;

// screen/offset variables
int currentOffset = 0;
int offsetIncr = 5;
boolean positiveOffset, negativeOffset;
int screenX = 2000;
int screenY = 1600;
int startX = 600;
int startY = 400;

// game state variables
int gameState = 0; // 0 = start screen, 1 = editing, 2 = playing, 3 = game over
int l = 1;
boolean gameplay = false;
boolean gamequit = false;
String endtext;

// scoring variables
int time;
int timeSinceGo;
int temp_score;
int score;
String[] strscore = new String[1];
String[] highscore = new String[1];



// Setup Function
public void setup() {
  
  time = millis();
  highscore = loadStrings("scores.txt");
  
  // basic setup
  fullScreen(P2D);
  frameRate(60);
  
  // setup variables
  
  // load images
  loadMaterials();
  loadOther();
  // load screens
  loadScreens();
  // load character
  setUpCharacter();
  
  // setup mouse mover
  try {
    MouseMover = new Robot();
  } catch (AWTException e) {
    println("Robot Class Not Supported");
    exit();
  }
  
}



// Draw Function
public void draw() {
  
  background(250);
  applyOffset();
  displayScreen();
  highlights();
  popMatrix();
  
}



// function for applying offset when user pans left and right
void applyOffset() {
  
  if (positiveOffset) {
    currentOffset += offsetIncr;
  }
  if (negativeOffset) {
    currentOffset -= offsetIncr;
  }
  
  pushMatrix();
  translate(currentOffset, 0);
  
}
